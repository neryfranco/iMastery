<resources>

    <!-- Base application theme. -->
    <style name="AlunoTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAlunoPrimary</item>
        <item name="colorPrimaryDark">@color/colorAlunoDark</item>
        <item name="colorAccent">@color/colorAlunoAccent</item>
    </style>

    <style name="AlunoTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProfessorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorProfessorPrimary</item>
        <item name="colorPrimaryDark">@color/colorProfessorDark</item>
        <item name="colorAccent">@color/colorAlunoAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
